<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:weightSum="4"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/fragment_overall_row_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="#fff4f4"/>

    <TextView
        android:id="@+id/fragment_overall_row_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="#fffef8"/>

    <TextView
        android:id="@+id/fragment_overall_row_unit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="#fafff8"/>

    <TextView
        android:id="@+id/fragment_overall_row_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="#f7feff"/>

</LinearLayout>